<div class="min-h-screen bg-gray-50">
  <!-- Admin Navigation Bar -->
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <h1 class="text-xl font-semibold text-gray-900">Edit Floorplan Settings</h1>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "View Heatmap", floorplan_path, class: "text-sm text-blue-600 hover:text-blue-800 transition-colors" %>
          <span class="text-gray-400">|</span>
          <%= link_to "Upload Image", upload_floorplan_path, class: "text-sm text-blue-600 hover:text-blue-800 transition-colors" %>
          <span class="text-gray-400">|</span>
          <%= link_to "Sign Out", destroy_admin_session_path, data: { turbo_method: :delete }, class: "text-sm text-gray-600 hover:text-gray-800 transition-colors" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto p-4 space-y-4">
    <% if @floorplan.image.attached? %>
      <div data-controller="floorplan-editor"
           data-floorplan-editor-image-url-value="<%= url_for(@floorplan.image) %>"
           data-floorplan-editor-thermostats-url-value="<%= thermostats_path %>"
           data-floorplan-editor-floorplan-url-value="<%= floorplan_path %>"
           data-floorplan-editor-radius-value="<%= @floorplan.radius || 50 %>"
           class="overflow-auto">
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" stroke="currentColor" fill="none" viewBox="0 0 48 48">
          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No floorplan uploaded</h3>
        <p class="text-gray-600 mb-4">Please upload a floorplan to edit its settings.</p>
        <%= link_to "Upload Floorplan", upload_floorplan_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>